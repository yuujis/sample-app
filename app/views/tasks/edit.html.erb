<% provide(:title,"タスク編集") %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @task, url: user_task_path(current_user),method: :PATCH, local: true) do |f| %>
      <%= render 'shared/error_messages' ,object: @user %>
      
        <%= f.label Task.human_attribute_name(:name), class: "label-signup" %>
        <%= f.text_field :name, class: "form-control" %>
  
        <%= f.label Task.human_attribute_name(:details), class: "label-signup" %>
        <%= f.text_area :details, rows: 5 , class: "form-control" %>
  
        <%= f.submit "更新" , class: " btn btn-primary btn-sm btn-signup" %>
        <%= f.submit "キャンセル" , class: " btn btn-primary btn-sm btn-signup" %>
      <% end %>
    
  </div>
</div>