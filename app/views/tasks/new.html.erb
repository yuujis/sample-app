<% provide(:title,"タスク新規作成") %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @task, url: user_tasks_path(current_user),method: :post, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
        <%= f.label Task.human_attribute_name(:task_name), class: "label-signup label-#{yield(:class_text)}" %>
        <%= f.text_field :task_name, class: "form-control" %>
  
        <%= f.label Task.human_attribute_name(:task_description), class: "label-signup label-#{yield(:class_text)}" %>
        <%= f.text_area :task_description, rows: 5 , class: "form-control" %>
  
        <%= f.submit "新規作成" , class: " btn btn-primary btn-sm btn-signup" %>
      <% end %>
    
  </div>
</div>