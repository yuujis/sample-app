<% provide(:title) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>タスク詳細</h1>
    <table class="table table-hover">
      <tbody>
        <tr>
          <th><%= Task.human_attribute_name :ID, class: "active col-md-3" %></th>
          <td class= "col-md-9" ><%= @task.id %></td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :名称, class:"active" %></th>
          <td><%= @task.name %></td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :詳細, class:"active" %></th>
          <td><%= @task.email %></td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :作成日, class:"active" %></th>
          <td><%= @task.created_at %></td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :更新日, class:"active" %></th>
          <td><%= @task.created_at %></td>
        </tr>
      </tbody>

    </table>
    
    <div class="task-menus">
      <%= link_to "編集" ,edit_user_task_path(@task),class: "btn btn-lg btn-success btn-form " %>
      <%= link_to "削除" ,user_task_path(@user,task),method: :delete,
          data: {confirm: "「#{@task.name}」を削除します。よろしいですか？"},class: "btn btn-lg btn-denger " %>
  </div>
  </div>
</div>